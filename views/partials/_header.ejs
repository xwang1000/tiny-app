<div class="header">
  <div class="header-announcement">
    <% if (user_id !== undefined) { %>
      <form class="login-form login-form-loggedin" action="/logout" method="POST">
        <label class="login-alert">User id <%= user_id %> is signed in.</label>
        <button class="button-submit button-logout" type="submit">log out</button>
      </form>

    <% } else {%>
      <form class="login-form login-form--login" action="/login" method="POST">
        <input id="email" class="form-input-announcement form-email" type="text" name="email" placeholder="email">
        <input id="password" class="form-input-announcement" type="password" name="password" placeholder="password">
        <button class="button-submit button-login" type="submit">sign in</button>
      </form>
      <a href="/register"><button class="button-register button-submit">register</button></a>
    <%}%>
    
  </div>

  <div class="header-content">
    <h1 class="header-title">
        <span><img class="header-image" src="../hellokitty.png" alt="Hello Kitty"></span>
        <a href="/urls">TinyApp</a>
        <span><img class="header-image header-melody" src="../melody.png" alt="Melody and her friend."></span>
    </h1>
  </div>
</div>